// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EventCentre {
  id                   String              @id @default(uuid())
  email                String              @unique
  password             String
  event_centre_name    String              @unique
  phone_number         String
  state                String
  slug                 String              @unique
  created_at           DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  reviews              Review[]
  location_id          String
  location             Location            @relation(fields: [location_id], references: [id])
  event_centre_details EventCentreDetails?
}

model EventCentreDetails {
  id              String      @id @default(uuid())
  main_image      String
  images          String[]
  description     String
  open_time       String
  close_time      String
  open_days       String
  lga             String
  price           String
  amenities       String[]
  video           String
  created_at      DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  event_centre_id String      @unique
  event_centre    EventCentre @relation(fields: [event_centre_id], references: [id])
}

model Location {
  id           String        @id @default(uuid())
  state        String
  eventCentres EventCentre[]
  created_at   DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Review {
  id                    String      @id @default(uuid())
  full_name             String
  review_comment        String
  user_comment_id       String
  created_at            DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  user_commented        User        @relation(fields: [user_comment_id], references: [id])
  event_centre_id       String
  event_centre_reviewed EventCentre @relation(fields: [event_centre_id], references: [id])
}

model User {
  id           String   @id @default(uuid())
  first_name   String
  last_name    String
  full_name    String
  email        String   @unique
  phone_number String
  password     String
  reviews      Review[]
  created_at   DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
